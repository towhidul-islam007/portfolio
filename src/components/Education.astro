---
// src/components/Education.astro

const educationHistory = [
  {
    degree: 'Bachelor of Science in Computer Science & Engineering',
    institution: 'University of Dhaka',
    period: '2013 - 2017',
    description: 'Strong foundation in algorithms, data structures, data science, and software engineering principles. Represented the university in ACM ICPC Regional Competitions.',
    logoUrl: 'https://placehold.co/100x100/0E141B/FFFFFF?text=UoD'
  },
  {
    degree: 'Higher Secondary Certificate',
    institution: 'Chittagong College',
    location: 'Chittagong, Bangladesh',
    logoUrl: 'https://placehold.co/100x100/0E141B/FFFFFF?text=CC'
  },
  {
    degree: 'Secondary School Certificate',
    institution: 'Bayezid Line High School',
    location: 'Chittagong, Bangladesh',
    logoUrl: 'https://placehold.co/100x100/0E141B/FFFFFF?text=BLHS'
  }
];
---

<section class="max-w-3xl mx-auto py-12 md:py-16 px-6">
  <h2 class="text-2xl md:text-3xl font-bold text-white mb-8 border-l-4 border-cyan-400 pl-4">
    Education
  </h2>
  <div class="space-y-8">
    {educationHistory.map(edu => (
      <div class="flex items-start gap-6 bg-gray-800/50 p-6 rounded-lg border border-gray-700/50">
        <img src={edu.logoUrl} alt={`${edu.institution} logo`} class="w-16 h-16 rounded-md object-cover hidden sm:block"/>
        <div class="flex-1">
          <div class="flex flex-col md:flex-row justify-between md:items-center mb-1">
            <h3 class="text-lg font-semibold text-white">
              {edu.degree}
            </h3>
            {edu.period && <p class="text-sm text-gray-400 mt-1 md:mt-0">{edu.period}</p>}
          </div>
          <p class="text-md font-medium text-cyan-400 mb-3">
            {edu.institution}
            {edu.location && <span class="text-gray-400">, {edu.location}</span>}
          </p>
          {edu.description && <p class="text-sm text-gray-300 leading-relaxed">{edu.description}</p>}
        </div>
      </div>
    ))}
  </div>
</section>
