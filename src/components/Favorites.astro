---

<section class="max-w-5xl mx-auto py-12 md:py-16 px-6">
  <h2 class="text-2xl md:text-3xl font-bold text-white mb-8 text-center">
    Favorites
  </h2>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    {favorites.map(favoriteCategory => (
      <div class="bg-gray-800/50 p-6 rounded-lg border border-gray-700/50 shadow-lg hover:shadow-cyan-500/10 transition-shadow duration-300">
        <h3 class="text-lg font-semibold text-cyan-400 mb-3">
          {favoriteCategory.category}
        </h3>
        <div class="space-y-2">
          {favoriteCategory.items.map(item => (
            <div class="text-gray-300 text-sm leading-relaxed">
              {typeof item === 'object' && item.url ? (
                <a 
                  href={item.url} 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="hover:text-cyan-400 transition-colors duration-200"
                >
                  {item.artist ? `${item.name} - ${item.artist}` : item.name}
                </a>
              ) : (
                item
              )}
            </div>
          ))}
        </div>
      </div>
    ))}
  </div>
</section>