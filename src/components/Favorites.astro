---
// src/components/Favorites.astro

const favorites = {
  "Favorite Songs": ["Song 1", "Song 2", "Song 3"],
  "Favorite Movies": ["Movie 1", "Movie 2", "Movie 3"],
  "Favorite TV Shows": ["TV Show 1", "TV Show 2", "TV Show 3"],
  "Favorite Football Matches": ["Match 1", "Match 2", "Match 3"],
};
---

<section class="max-w-5xl mx-auto py-12 md:py-16 px-6">
  <h2 class="text-2xl md:text-3xl font-bold text-white mb-8 text-center">
    Favorites
  </h2>
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
    {Object.entries(favorites).map(([category, items]) => (
      <div class="bg-gray-800/50 p-6 rounded-lg border border-gray-700/50">
        <h3 class="text-lg font-semibold text-cyan-400 mb-4">{category}</h3>
        <ul class="space-y-2">
          {items.map(item => (
            <li class="text-gray-300 text-sm">{item}</li>
          ))}
        </ul>
      </div>
    ))}
  </div>
</section>
